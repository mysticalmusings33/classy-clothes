  Image gallery with customizable blocks
-->

<style>
  /* ==================== IMAGE GALLERY ==================== */
  
  .about-gallery {
    padding: var(--spacing-xl) 0;
    background: var(--color-background);
  }
  
  .gallery-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--spacing-lg);
  }
  
  .gallery-header h2 {
    font-size: 2.5rem;
    margin-bottom: var(--spacing-md);
  }
  
  .gallery-header p {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #666;
  }
  
  /* Gallery grid - masonry-style layout */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-md);
    margin-top: var(--spacing-xl);
  }
  
  .gallery-item {
    position: relative;
    overflow: hidden;
    background: var(--color-light-gray);
  }
  
  /* Vary heights for visual interest */
  .gallery-item:nth-child(3n+1) {
    grid-row: span 2;
  }
  
  .gallery-item-wrapper {
    position: relative;
    padding-bottom: 100%;  /* Square by default */
    overflow: hidden;
  }
  
  .gallery-item:nth-child(3n+1) .gallery-item-wrapper {
    padding-bottom: 200%;  /* Tall */
  }
  
  .gallery-item img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }
  
  .gallery-item:hover img {
    transform: scale(1.05);
  }
  
  /* Optional caption overlay */
  .gallery-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: var(--spacing-md);
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    color: var(--color-white);
    font-size: 0.875rem;
    opacity: 0;
    transition: var(--transition);
  }
  
  .gallery-item:hover .gallery-caption {
    opacity: 1;
  }
  
  /* ==================== RESPONSIVE ==================== */
  
  @media (max-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .gallery-header h2 {
      font-size: 2rem;
    }
  }
  
  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-sm);
    }
    
    /* Reset varied heights on mobile */
    .gallery-item,
    .gallery-item:nth-child(3n+1) {
      grid-row: span 1;
    }
    
    .gallery-item-wrapper,
    .gallery-item:nth-child(3n+1) .gallery-item-wrapper {
      padding-bottom: 100%;  /* All square on mobile */
    }
    
    .gallery-header h2 {
      font-size: 1.75rem;
    }
    
    .gallery-header p {
      font-size: 1rem;
    }
  }
  
  @media (max-width: 480px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<!-- ==================== GALLERY HTML ==================== -->
<section class="about-gallery">
  <div class="container">
    
    <!-- Section header -->
    <div class="gallery-header">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p>{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
    
    <!-- Gallery grid -->
    {% if section.blocks.size > 0 %}
      <div class="gallery-grid">
        {% for block in section.blocks %}
          <div class="gallery-item" {{ block.shopify_attributes }}>
            <div class="gallery-item-wrapper">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '800x' }}" 
                     alt="{{ block.settings.caption | default: 'Gallery image' }}"
                     loading="lazy">
              {% else %}
                <!-- Placeholder images from Unsplash -->
                {% assign placeholder_ids = "photo-1490481651871-ab68de25d43d,photo-1483985988355-763728e1935b,photo-1441984904996-e0b6ba687e04,photo-1469334031218-e382a71b716b,photo-1515372039744-b8f02a3ae446,photo-1445205170230-053b83016050" | split: "," %}
                {% assign random_index = forloop.index | modulo: 6 %}
                <img src="https://images.unsplash.com/{{ placeholder_ids[random_index] }}?w=800&h=800&fit=crop" 
                     alt="Gallery image"
                     loading="lazy">
              {% endif %}
              
              {% if block.settings.caption != blank %}
                <div class="gallery-caption">
                  {{ block.settings.caption }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    
  </div>
</section>

<!-- ==================== SCHEMA ==================== -->
{% schema %}
{
  "name": "Image Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Studio"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "A glimpse into our creative space and process."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Recommended size: 800x800px. Leave empty for placeholder."
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption (Optional)",
          "info": "Shows on hover"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Gallery",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}