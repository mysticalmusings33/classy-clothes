<!-- ==================== SCHEMA ==================== -->
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Brand"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo",
      "info": "Optional. Leave empty to show store name."
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Timeless elegance for the modern wardrobe."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show Social Media Links",
      "default": true
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "Twitter/X URL"
    },
    {
      "type": "url",
      "id": "social_pinterest",
      "label": "Pinterest URL"
    },
    {
      "type": "header",
      "content": "Payment Icons"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show Payment Icons",
      "default": true,
      "info": "Displays Visa, Mastercard, Amex, and PayPal icons"
    }
  ]
}
{% endschema %}