<!-- 
  Site footer with navigation, social links, payment icons, and copyright
-->

<!-- ==================== FOOTER HTML ==================== -->
<footer class="site-footer">
  <div class="container">
    
    <!-- Main Footer Content -->
    <div class="footer-content">
      
      <!-- Brand Section -->
      <div class="footer-section footer-brand">
        {% if section.settings.logo %}
          <a href="/" class="footer-logo">
            <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}">
          </a>
        {% else %}
          <a href="/" class="footer-logo">{{ shop.name }}</a>
        {% endif %}
        
        {% if section.settings.tagline != blank %}
          <p class="footer-tagline">{{ section.settings.tagline }}</p>
        {% endif %}
        
        <!-- Social Media Links -->
        {% if section.settings.show_social %}
          <div class="footer-social">
            {% if section.settings.social_instagram != blank %}
              <a href="{{ section.settings.social_instagram }}" 
                 class="social-link" 
                 target="_blank" 
                 rel="noopener"
                 aria-label="Instagram">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5" fill="none" stroke="currentColor" stroke-width="2"/>
                  <circle cx="12" cy="12" r="4" fill="none" stroke="currentColor" stroke-width="2"/>
                  <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.social_facebook != blank %}
              <a href="{{ section.settings.social_facebook }}" 
                 class="social-link" 
                 target="_blank" 
                 rel="noopener"
                 aria-label="Facebook">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z" fill="currentColor"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.social_twitter != blank %}
              <a href="{{ section.settings.social_twitter }}" 
                 class="social-link" 
                 target="_blank" 
                 rel="noopener"
                 aria-label="Twitter/X">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" fill="currentColor"/>
                </svg>
              </a>
            {% endif %}
            
            {% if section.settings.social_pinterest != blank %}
              <a href="{{ section.settings.social_pinterest }}" 
                 class="social-link" 
                 target="_blank" 
                 rel="noopener"
                 aria-label="Pinterest">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
                  <path d="M12 6c-3.314 0-6 2.686-6 6 0 2.536 1.574 4.707 3.804 5.597-.053-.483-.1-1.226.02-1.753.11-.476.706-2.99.706-2.99s-.18-.36-.18-.89c0-.835.483-1.458 1.085-1.458.512 0 .759.385 759.86 0 .954-.686 1.636-1.644 1.636-1.013 0-1.834-.827-1.834-2.04 0-.976.738-1.806 1.657-1.806.97 0 1.438.728 1.438 1.603 0 .975-.622 2.433-.943 3.784-.268 1.135.569 2.06 1.689 2.06 2.027 0 3.387-2.605 3.387-5.665 0-2.338-1.587-4.087-4.458-4.087-3.27 0-5.322 2.427-5.322 5.134 0 .933.273 1.588.702 2.093.198.234.226.328.154.598-.052.196-.171.678-.22.867-.066.256-.266.348-.49.254-1.371-.559-2.006-2.057-2.006-3.744 0-2.785 2.346-6.133 6.99-6.133 3.754 0 6.235 2.718 6.235 5.643 0 3.844-2.137 6.734-5.288 6.734-1.06 0-2.057-.572-2.398-1.218 0 0-.572 2.27-.697 2.718-.214.792-.632 1.587-1.007 2.172A10.045 10.045 0 0 0 12 22c5.523 0 10-4.477 10-10S17.523 2 12 2" fill="currentColor"/>
