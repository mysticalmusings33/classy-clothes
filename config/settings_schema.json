        "min": 1000,
        "max": 1600,
        "step": 50,
        "unit": "px",
        "default": 1400,
        "info": "Maximum width for page content"
      },
      {
        "type": "header",
        "content": "Product Grid"
      },
      {
        "type": "range",
        "id": "products_per_row_desktop",
        "label": "Products Per Row (Desktop)",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 4
      },
      {
        "type": "range",
        "id": "products_per_row_tablet",
        "label": "Products Per Row (Tablet)",
        "min": 2,
        "max": 4,
        "step": 1,
        "default": 3
      },
      {
        "type": "select",
        "id": "products_per_row_mobile",
        "label": "Products Per Row (Mobile)",
        "options": [
          { "value": "1", "label": "1" },
          { "value": "2", "label": "2" }
        ],
        "default": "2"
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "header",
        "content": "Button Styles"
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button Style",
        "options": [
          {
            "value": "outline",
            "label": "Outline"
          },
          {
            "value": "solid",
            "label": "Solid"
          }
        ],
        "default": "outline"
      },
      {
        "type": "range",
        "id": "button_border_radius",
        "label": "Button Border Radius",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "px",
        "default": 0,
        "info": "0 = square corners, higher = more rounded"
      },
      {
        "type": "checkbox",
        "id": "button_uppercase",
        "label": "Uppercase Button Text",
        "default": true
      }
    ]
  },
  {
    "name": "Hero Section",
    "settings": [
      {
        "type": "header",
        "content": "Hero Settings"
      },
      {
        "type": "range",
        "id": "hero_height_desktop",
