      {
        "type": "header",
        "content": "Main Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "info": "Used for main text and headings",
        "default": "#2c2c2c"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color",
        "info": "Accent color for highlights",
        "default": "#4a5d4f"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
