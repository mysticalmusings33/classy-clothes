      },
      {
        "type": "color",
        "id": "color_white",
        "label": "White",
        "default": "#ffffff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading Font",
        "default": "assistant_n4",
        "info": "Used for headings and titles"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body Font",
        "default": "assistant_n4",
        "info": "Used for body text"
      },
      {
        "type": "header",
        "content": "Font Sizes"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "label": "Base Font Size",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "default": 16,
        "info": "Base size for body text"
      },
      {
        "type": "range",
        "id": "font_size_h1",
        "label": "H1 Size",
        "min": 32,
        "max": 72,
        "step": 2,
        "unit": "px",
        "default": 56,
        "info": "Size for largest headings"
      },
      {
        "type": "range",
        "id": "font_size_h2",
        "label": "H2 Size",
        "min": 24,
        "max": 56,
        "step": 2,
        "unit": "px",
        "default": 40,
        "info": "Size for section headings"
      }
    ]
  },
  {
    "name": "Spacing",
    "settings": [
      {
        "type": "header",
        "content": "Section Spacing"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "label": "Section Padding",
        "min": 40,
        "max": 120,
        "step": 8,
        "unit": "px",
        "default": 96,
        "info": "Vertical padding for main sections"
      },
      {
        "type": "range",
        "id": "spacing_sections_small",
        "label": "Small Section Padding",
        "min": 20,
        "max": 80,
        "step": 4,
        "unit": "px",
        "default": 64,
        "info": "Vertical padding for smaller sections"
      },
      {
        "type": "header",
        "content": "Element Spacing"
      },
      {
        "type": "range",
        "id": "spacing_large",
        "label": "Large Spacing",
        "min": 32,
        "max": 96,
        "step": 8,
        "unit": "px",
        "default": 64,
        "info": "Space between major elements"
      },
      {
        "type": "range",
        "id": "spacing_medium",
        "label": "Medium Spacing",
        "min": 16,
        "max": 48,
        "step": 4,
        "unit": "px",
        "default": 32,
        "info": "Standard spacing between elements"
      },
      {
        "type": "range",
        "id": "spacing_small",
        "label": "Small Spacing",
        "min": 8,
        "max": 24,
        "step": 2,
        "unit": "px",
        "default": 16,
        "info": "Tight spacing for related elements"
      }
    ]
  },
  {
